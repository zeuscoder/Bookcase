<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- user页面的ToolBar -->
    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/guillotine_background</item>
    </style>


    <style name="UserMainItemLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/card_avatar_bar</item>
    </style>

    <style name="UserMainItemTextTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/keyline_1</item>
        <item name="android:layout_marginBottom">@dimen/keyline_1</item>
        <item name="android:layout_marginLeft">@dimen/keyline_1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/keyline_1</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="UserMainItemTextDsrc">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableRight">@mipmap/ic_global_arrow_right_2px</item>
        <item name="android:drawablePadding">@dimen/keyline_1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/keyline_1</item>
        <item name="android:textColor">#333333</item>
    </style>

</resources>
