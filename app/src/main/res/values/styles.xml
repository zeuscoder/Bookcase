    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 纵向分布 -->
    <style name="layout_vertical" parent="layout_full">
        <item name="android:layout_height">0dip</item>
    </style>

    <!-- 主页按钮布局 -->
    <style name="tab_layout_radio" parent="layout_full">
        <!--<item name="android:background">@drawable/tab_selector_backgound</item>-->
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tab_selector_textcolor</item>
        <item name="android:paddingBottom">@dimen/tab_padding</item>
    </style>


